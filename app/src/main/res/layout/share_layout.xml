<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:background="@drawable/app_bg_draw">

    <androidx.cardview.widget.CardView
            android:id="@+id/share_cv_poet"
            android:layout_width="0dp"
            android:elevation="14dp"
            android:layout_height="300dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#FFF"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
            android:layout_marginTop="40dp" android:layout_marginEnd="25dp">

        <ImageView android:id="@+id/share_rl_card"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   tools:background="@mipmap/bg"/>

    </androidx.cardview.widget.CardView>

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@mipmap/icon_round"
            android:id="@+id/share_iv_icon" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/share_cv_poet" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#666"
            android:id="@+id/share_tv_name" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/share_iv_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>